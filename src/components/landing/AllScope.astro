---
import { auditData } from "../../data/audit.json";
import { taxationData } from "../../data/taxation.json";
import { consultingData } from "../../data/consulting.json";
---

<section class="scroll-mt-24" id="services">
	<div class="px-8 md:px-12 py-12 max-w-2xl mx-auto">
		<div
			class="col-span-full lg:col-span-2 w-full rounded-4xl h-full items-center inline-flex text-black"
		>
			<h2 class="text-3xl tracking-tighter font-light">Tell me more</h2>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-1 gap-px mt-8">
			<div class="p-8 bg-white rounded-3xl">
				<div
					class="inline-flex items-center border-b w-full border-white/10"
				>
					<p class="text-2xl text-black">
						Audit & Assurance Practices
					</p>
				</div>
				<div class="divide-y divide-white/10 mt-4">
					{
						auditData.map((template) => (
							<>
								<div class=" flex flex-col sm:flex-row justify-between gap-4 lg:items-end">
									<p class="font-medium leading-6 text-zinc-500 text-sm flex gap-2 items-center">
										⏤ &nbsp; &nbsp; {template.title}
									</p>
								</div>
							</>
						))
					}
				</div>
			</div>
			<div class="p-8 bg-white rounded-3xl">
				<div
					class="inline-flex items-center border-b w-full border-white/10"
				>
					<p class="text-2xl text-black">
						Taxation and Regulatory Compliance
					</p>
				</div>
				<div class="divide-y divide-white/10 mt-4">
					{
						taxationData.map((template) => (
							<>
								<div class=" flex flex-col sm:flex-row justify-between gap-4 lg:items-end">
									<p class="font-medium leading-6 text-zinc-500 text-sm flex gap-2 items-center">
										⏤ &nbsp; &nbsp; {template.title}
									</p>
								</div>
							</>
						))
					}
				</div>
			</div>
			<div class="p-8 bg-white rounded-3xl">
				<div
					class="inline-flex items-center border-b w-full border-white/10"
				>
					<p class="text-2xl text-black">Business Consulting</p>
				</div>
				<div class="divide-y divide-white/10 mt-4">
					{
						consultingData.map((template) => (
							<>
								<div class=" flex flex-col sm:flex-row justify-between gap-4 lg:items-end">
									<p class="font-medium leading-6 text-zinc-500 text-sm flex gap-2 items-center">
										⏤ &nbsp; &nbsp; {template.title}
									</p>
								</div>
							</>
						))
					}
				</div>
			</div>
		</div>
		<div class="mt-24">
			<p
				class="font-medium leading-6 text-zinc-500 text-base text-balance flex gap-2 items-center text-center mx-auto"
			>
				One stop finance and business solutions for Startups, SME's and Enterprise
			</p>
		</div>
	</div>
</section>
